<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_item">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_img"
        android:src="@drawable/icon_music"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_file_name"
        android:text="File Name"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/music_img"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_album"
        android:text="Album"
        android:textSize="12dp"
        android:layout_below="@+id/music_file_name"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/music_img"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_block"
        android:text="|"
        android:textSize="12dp"
        android:layout_below="@+id/music_file_name"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/music_album"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:id="@+id/music_artist"
        android:text="Artist"
        android:textSize="12dp"
        android:layout_below="@+id/music_file_name"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/music_block"
        android:layout_toLeftOf="@+id/menuMore"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/menuMore"
        android:src="@drawable/ic_more"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="5dp" />

</RelativeLayout>